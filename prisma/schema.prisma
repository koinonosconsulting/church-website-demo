generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["clientExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// *
///  * Core user / staff / donor
model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  phone         String?
  password      String?
  role          Role           @default(DONOR)
  branchId      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  auditLogs     AuditLog[]
  donations     Donation[]     @relation("user_donations")
  notifications Notification[]
  branch        Branch?        @relation(fields: [branchId], references: [id])
}

/// *
///  * Physical locations / church branches
model Branch {
  id              String     @id @default(cuid())
  name            String
  slug            String     @unique
  address         String?
  city            String?
  contactEmail    String?
  contactPhone    String?
  isActive        Boolean    @default(true)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  collectedAmount Float      @default(0)
  donations       Donation[]
  projects        Project[]
  users           User[]

  @@index([createdAt])
}

/// *
///  * Fundraising projects / campaigns
model Project {
  id              String     @id @default(cuid())
  title           String
  slug            String     @unique
  description     String?
  branchId        String?
  targetAmount    Float?
  collectedAmount Float      @default(0)
  isActive        Boolean    @default(true)
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  donations       Donation[]
  branch          Branch?    @relation(fields: [branchId], references: [id])

  @@index([createdAt])
}

/// *
///  * Donation record for one-off donations
model Donation {
  id                String   @id @default(cuid())
  donorId           String?
  donorName         String?
  donorEmail        String
  donorPhone        String?
  purpose           String
  note              String?
  amount            Float
  currency          String   @default("NGN")
  branchId          String
  projectId         String?
  status            String   @default("PENDING")
  reference         String   @unique
  provider          String   @default("paystack")
  providerRef       String?
  meta              Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  authorizationCode String?
  branch            Branch   @relation(fields: [branchId], references: [id])
  donor             User?    @relation("user_donations", fields: [donorId], references: [id])
  project           Project? @relation(fields: [projectId], references: [id])

  @@index([createdAt])
  @@index([reference])
}

/// *
///  * Sermons / media
model Sermon {
  id        String    @id @default(cuid())
  title     String
  slug      String    @unique
  speaker   String?
  series    String?
  videoUrl  String?
  audioUrl  String?
  notesUrl  String?
  date      DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([createdAt])
}

/// *
///  * Events
model Event {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  description String?
  dateStart   DateTime?
  dateEnd     DateTime?
  location    String?
  capacity    Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isFeatured  Boolean   @default(false)

  @@index([createdAt])
}

/// *
///  * Simple audit log for admin actions
model AuditLog {
  id           String   @id @default(cuid())
  userId       String?
  action       String
  resourceType String?
  resourceId   String?
  meta         Json?
  createdAt    DateTime @default(now())
  user         User?    @relation(fields: [userId], references: [id])

  @@index([createdAt])
}

/// *
///  * General settings (key-value)
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// *
///  * Cached heavy reports to speed admin UI
model ReportCache {
  id       String   @id @default(cuid())
  type     String
  data     Json
  cachedAt DateTime @default(now())
}

/// *
///  * Notifications (optional)
model Notification {
  id        String   @id @default(cuid())
  userId    String?
  type      String
  message   String
  meta      Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([createdAt])
}

enum Role {
  SUPER_ADMIN
  BRANCH_ADMIN
  PROJECT_LEAD
  FINANCE
  CONTENT_ADMIN
  VOLUNTEER
  DONOR
}
